{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022", 
    "module": "NodeNext",
    "moduleResolution": "Node16", 
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "."
  },
  "include": ["src/**/*", "**/*.ts",  "types.d.ts"],
  "exclude": ["node_modules"]
}